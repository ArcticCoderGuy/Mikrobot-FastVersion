# MIKROBOT TRADING SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your secure values
# NEVER commit .env files to version control

# Django Configuration
MIKROBOT_SECRET_KEY=your-super-secret-django-key-here-change-immediately
MIKROBOT_DEBUG=False
MIKROBOT_ENVIRONMENT=production
MIKROBOT_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (PostgreSQL for production)
MIKROBOT_DB_NAME=mikrobot_platform
MIKROBOT_DB_USER=mikrobot_user
MIKROBOT_DB_PASSWORD=your-secure-database-password
MIKROBOT_DB_HOST=localhost
MIKROBOT_DB_PORT=5432

# MT5 Trading Account Configuration
MIKROBOT_MT5_LOGIN=your-mt5-account-number
MIKROBOT_MT5_PASSWORD=your-mt5-password
MIKROBOT_MT5_SERVER=your-mt5-server-name
MIKROBOT_MT5_PATH=C:/Program Files/MetaTrader 5/terminal64.exe
MIKROBOT_MT5_TIMEOUT=60000

# Redis Configuration
MIKROBOT_REDIS_URL=redis://localhost:6379/0
MIKROBOT_CELERY_BROKER_URL=redis://localhost:6379/1

# Email Configuration
MIKROBOT_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
MIKROBOT_EMAIL_HOST=smtp.gmail.com
MIKROBOT_EMAIL_PORT=587
MIKROBOT_EMAIL_USE_TLS=True
MIKROBOT_EMAIL_HOST_USER=your-email@gmail.com
MIKROBOT_EMAIL_PASSWORD=your-email-app-password
MIKROBOT_DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Stripe Payment Configuration
MIKROBOT_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
MIKROBOT_STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
MIKROBOT_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Encryption Configuration
MIKROBOT_ENCRYPTION_KEY=your-32-character-encryption-key

# Logging Configuration
MIKROBOT_LOG_LEVEL=INFO
MIKROBOT_LOG_FILE=/var/log/mikrobot/mikrobot.log

# Security Configuration
MIKROBOT_SECURE_SSL_REDIRECT=True
MIKROBOT_SESSION_COOKIE_SECURE=True
MIKROBOT_CSRF_COOKIE_SECURE=True